@model MonamourWeb.Models.Animal
@{
    ViewData["Title"] = "Редактировать животное";
}

<form method="post" asp-controller="Animals" asp-action="UpdatePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Редактировать животное</h2>
        </div>

        <br />

        <table class="table mx-auto table-borderless text-md-center" style="width: 100%">
            <tr>
                <td class="w-25">
                    <label asp-for="Title" class="font-weight-bold"></label>
                </td>
                <td>
                    <input asp-for="Title" value="@Model.Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </td>
            </tr>
        </table>

        <br />

        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Сохранить" />
                </div>
                <div class="col">
                    <a class="btn btn-danger w-75" asp-controller="Animals" asp-action="All">Назад</a>
                </div>
            </div>
        </div>
    </div>
</form>

