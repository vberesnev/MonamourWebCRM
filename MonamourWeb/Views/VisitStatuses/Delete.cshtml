@model MonamourWeb.Models.VisitStatus
@{
    ViewData["Title"] = "Удалить статус посещения";
}

<form method="post" asp-controller="VisitStatuses" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h4 class="text-black-50 pl-3">Удалить статус посещения</h4>
        </div>

        <br />

        <table class="table mx-auto table-borderless text-md-center" style="width: 50%">
            <tr>
                <td class="w-25">
                    <label asp-for="Status" class="font-weight-bold"></label>
                </td>
                <td>
                    <text>@Model.Status</text>
                </td>
            </tr>
        </table>

        <br />

        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-danger w-75" value="Удалить" />
                </div>
                <div class="col">
                    <a class="btn btn-info w-75" asp-controller="VisitStatuses" asp-action="All">Статусы посещений</a>
                </div>
            </div>
        </div>
    </div>
</form>