@model MonamourWeb.ViewModels.ProcedureViewModel
@{
    ViewData["Title"] = "Добавить процедуру";
}
<form method="post" asp-controller="Procedures" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h4 class="text-black-50 pl-3">Добавить процедуру</h4>
        </div>

        <br />

        <table class="table table-borderless text-center" style="width: 100%">
            <tr>
                <td>
                    <label asp-for="Procedure.Title"></label>
                </td>
                <td>
                    <input asp-for="Procedure.Title" class="form-control" />
                    <span asp-validation-for="Procedure.Title" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Procedure.Animal"></label>
                </td>
                <td>
                    <select asp-for="Procedure.AnimalId" class="form-control">
                        <option value="">Выберите животное</option>
                        @foreach (var item in Model.Animals)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                    <span asp-validation-for="Procedure.AnimalId" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Procedure.Cost"></label>
                </td>
                <td>
                    <input asp-for="Procedure.Cost" class="form-control" />
                    <span asp-validation-for="Procedure.Cost" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Procedure.Info"></label>
                </td>
                <td>
                    <input asp-for="Procedure.Info" class="form-control" />
                    <span asp-validation-for="Procedure.Info" class="text-danger"></span>
                </td>
            </tr>
        </table>

        <br />

        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Добавить" />
                </div>
                <div class="col">
                    <a class="btn btn-danger w-75" asp-controller="Procedures" asp-action="All">Назад</a>
                </div>
            </div>
        </div>
    </div>
</form>


