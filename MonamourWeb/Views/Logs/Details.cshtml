@model MonamourWeb.Models.Log
@{
    ViewData["Title"] = "Просмотр лога";
}

<div class="border p-3">
    <div class="form-group row">
        <h4 class="text-black-50 pl-3">Просмотр лога</h4>
    </div>

    <table class="table table-borderless text-center" style="width: 100%">
        <tr>
            <td class="w-25">
                <label asp-for="@Model.Date"></label>
            </td>
            <td>
                <text class="form-control">@Model.Date</text>
            </td>
        </tr>
        <tr>
            <td class="w-25">
                <label asp-for="@Model.User"></label>
            </td>
            <td>
                <text class="form-control">@Model.User.Name</text>
            </td>
        </tr>
        <tr>
            <td class="w-25">
                <label asp-for="@Model.Message"></label>
            </td>
            <td>
                <textarea style="height: 250px" asp-for="@Model.Message" class="form-control"></textarea>
            </td>
        </tr>
    </table>

    <div class="form-group row">
        <div class="col-4 offset-2 row">
            <div class="col">
                <a class="btn btn-info w-75" asp-controller="Logs" asp-action="Index">Назад</a>
            </div>
        </div>
    </div>
</div>
